{
  "extends": "eslint:recommended",
  "plugins": [
    "html"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "opts": true,
    "vue": true
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "indent": [
      "error",
      2
    ]
  },
  "parserOptions": {
    "sourceType": "module"
  }
}
